<odoo>
    <data>
    <record model="ir.ui.view" id="unispice_company_form">
        <field name="name">unispice_company_form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page string="Unispice" name="unispice">
                    <group>
                        <field name="internal_transfer_id" />
                        <field name="inbound_transfer_id" />
                        <field name="transform_transfer_id" />
                        <field name="tranformacion_seq_id" />
                    </group>
                </page>
            </xpath>
        </field>
     </record>


     <record model="ir.ui.view" id="unispice_location_form">
        <field name="name">unispice_location_form</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="crear_unispice_location" type="object" class="oe_stat_button" string="Crear Pantalla de Recepcion"/>
                
            </xpath>
        </field>
     </record>


     <record model="ir.ui.view" id="unispice_product_form">
        <field name="name">unispice_product_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='type']" position="after">
                    <field name="tipo_produccion"/>
                    
            </xpath>
            <!--xpath expr="//page[@name='inventory']" position="after">
                <page string="Calidad">
                    <field name="quality_ids">
                        <tree editable="top">
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </xpath-->

            <xpath expr="//group[@name='group_lots_and_weight']" position="after">
                <group string="Canas / Pallet">
                    <field name="is_canasta"/>
                    <field name="is_pallet"/>
                    <field name="tara"/>
                </group>
                
            </xpath>
        </field>
     </record>



     <record model="ir.ui.view" id="unispice_quelity_check_form">
        <field name="name">unispice_quelity_check_form</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_form"/>
        <field name="arch" type="xml">

            
            <xpath expr="//page[@name='notes']" position="after">
                <page string="Check List">
                    <group>
                        <field name="muestra"/>
                    </group>
                    <field name="quality_ids">
                        <tree editable="top" create="0">
                            <field name="name"/>
                            <field name="muestra_afectada"/>
                            <field name="porcentaje"/>
                            <field name="rango"/>
                            <field name="proyectado"/>                            
                            <field name="aprobado" widget="boolean_toggle"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            
        </field>
     </record>
     



     <record model="ir.ui.view" id="unispice_lot_tree">
        <field name="name">unispice_lot_tree</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">

            
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_qty"/>
                <field name="canastas"/>
                <field name="proveedor_id"/>
                <field name="tipo_productor"/>
                <field name="grupo_mp"/>
                <field name="fecha_cosecha"/>
            </xpath>

            
        </field>
     </record>


    

    </data>
</odoo>