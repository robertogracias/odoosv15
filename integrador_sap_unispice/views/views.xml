        <record id="unispice_product_form" model="ir.ui.view">
            <field name="name">unispice_product_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//page[@name='inventory']" position="after">
                    <page string="Unispice" name="unispice">
                        <group>
                            <group string="Datos Generales">
                                <field name="foreignname" />
                                <!--field name="itemsgroup"/-->
                                <!--field name="uomgroup"/-->
                                <field name="subgrupoventa1" String="Grupo Articulo"/>
                                <field name="subgrupoventa2"/>
                                <field name="subgrupoventa3"/>
                            </group>
                            <group string="Pedido">
                                <field name="itemsperpurchaseunit"/>
                                <!--field name="planingmethod"/-->
                                <!--field name="procurementmethod"/-->
                                <!--field name="orderinterval"/-->
                                <field name="ordermultiple"/>
                                <field name="minimumorderquantity"/>
                                <field name="leadtime"/>
                                <field name="tolerancedays"/>
                                
                            </group>
                            <group string="Dimensiones">
                                <field name="length"/>
                                <field name="width"/>
                                <field name="height"/>
                                <field name="uomvolumen"/>
                                <field name="volume" string="Volumen Cm3"/>
                                <field name="weight"/>
                            </group>
                            <group string="Pesos">
                                <field name="pesoreferencia"/>
                                <field name="pesoreferenciaminimo"/>
                                <field name="pesoreferenciamaximo"/>
                                <field name="pesoneto"/>
                                <field name="pesobruto"/>
                            </group>
                            <group string="Empacado">
                                <field name="camaaereo"/>
                                <field name="filasaereo"/>
                                <field name="cajaspalletaereo"/>
                                <field name="camamaritimo"/>
                                <field name="filasmaritimo"/>
                                <field name="cajaspalletmaritimo"/>
                                <field name="uomembalaje"/>
                                <field name="quantityperpackage"/>
                            </group>
                            <group string="Otros">
                                <field name="grupomp"/>
                                <field name="grupotipomp"/>
                                <field name="grupomppermitida"/>
                                <field name="grupopt"/>
                                <field name="grupopresentacion"/>
                                <field name="grupotipoempaque"/>
                                <field name="cantidadporposicion"/>
                            </group>
                        </group>
                    </page>
                       
                </xpath>
            </field>
        </record>




        <record id="sap_territory_form" model="ir.ui.view">
            <field name="name">sap_territory_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                 
                
                <xpath expr="//page[@name='contact_addresses']" position="after">
                    <page string="Unispice">
                        <group>
                                <field name="foreingname"/>
                                <field name="bptype"/>
                                <field name="groupcode" />
                                <field name="currency"/>
                                <field name="contactperson"/>
                                <field name="empresa"/>
                                <field name="almacen"/>
                                <field name="tipoproductor"/>
                                <field name="coordinadoragricola"/>
                                <field name="paymenttermscode"/>
                                <field name="pricelistcode"/>
                                <field name="creditlimit"/>
                                <field name="firstname"/>
                                <field name="lastname"/>
                                <field name="territory_id"/>
                                <field name="taxcode"/>
                                
                                <field name="sap_state"/>
                        </group>  
                        <group string="Sociedad Unispice">
                            <field name="unispice_sociedad"/>
                        </group>  
                    </page>
                </xpath>
            </field>
        </record>



        <record id="sap_purchase_order_form" model="ir.ui.view">
            <field name="name">sap_purchase_order_form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                 
                
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="unispice_sociedad_id" domain="[('unispice_sociedad','=',True)]" />
                    <field name="sap_order" />
                </xpath>

                <xpath expr="//tree//field[@name='product_uom']" position="after">
                    <field name="sap_warehouse_id" />
                </xpath>
            </field>
        </record>


