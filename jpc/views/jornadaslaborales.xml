<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record model="ir.ui.view" id="jpc_jornada_form">
            <field name="name">jpc_jornada_form</field>
            <field name="model">jpc.reporte.jornal</field>
            <field name="arch" type="xml">
                <form string="Reporte de Jornada">
                    <header>
                        <button name="button_aprobar" string="Aprobar" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': [('state', '!=', 'borrador')]}"/>
                        <button name="button_draft" string="Regresar a borrador" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': [('state', '=', 'borrador')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" placeholder="Documento"/>
                            <field name="fecha"/>
                            <field name="supervisor_id"/>
                            <field name="cuenta_analitica_id"/>
                            <field name="move_id"/>
                        </group>
                        <field name="item_ids">
                            <tree editable="bottom">
                                <field name="empleado_id"/>
                                <field name="product_id" domain="[('type','=','service')]"/>
                                <field name="quantity"/>
                                <field name="price_unit"/>
                                <field name="total"/>

                            </tree>

                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree del objetivo-->
        <record model="ir.ui.view" id="jpc_jornada_tree">
            <field name="name">jpc_jornada_tree</field>
            <field name="model">jpc.reporte.jornal</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" placeholder="Documento"/>
                    <field name="fecha"/>
                    <field name="supervisor_id"/>
                    <field name="cuenta_analitica_id"/>
                </tree>
            </field>
        </record>


        <!--action del objetivo-->
        <record model="ir.actions.act_window" id="jpc_jornada_action">
            <field name="name">Jornadas</field>
            <field name="res_model">jpc.reporte.jornal</field>
            <!--field name="view_type">form</field-->
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Jornadas</p>
            </field>
        </record>

        <!--menu del objetivo-->
        <menuitem id="jpc_menu"  name="San Jeronimo"  sequence="9"/>

        <menuitem id="jpc_jornada_menu" parent="jpc.jpc_menu" name="Jornadas" action="jpc_jornada_action" sequence="9"/>


        <record model="ir.actions.act_window" id="jpc_jornada_detail_action">
            <field name="name">Jornadas Detalle</field>
            <field name="res_model">jpc.reporte.jornal.item</field>
            <!--field name="view_type">form</field-->
            <field name="view_mode">pivot,graph,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Detalles de jornadas</p>
            </field>
        </record>

        <menuitem id="jpc_jornada_detalle_menu" parent="jpc.jpc_menu" name="Detalle Jornadas" action="jpc_jornada_detail_action" sequence="10"/>


    </data>
</odoo>