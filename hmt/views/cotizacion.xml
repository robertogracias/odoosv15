<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="template_hmt_digital">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-call="hmt.hmt_digital"><t t-raw="0"/></t>
        </template>
   



    <template id="hmt_digital">
        <t t-name="hmt.hmt_digital">
            <div class="header" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-12 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                </div>
                <!--div class="row">
                    <div class="col-6" name="company_address">
                        <div t-field="company.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                    </div>
                </div-->
            </div>
    
            <div style="" t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-raw="0"/>
                
            </div>
    
            
            <div t-attf-class="footer">
                <div class="text-center">
                    <b><span t-field="company.name"/></b>
                    <span><b></b><span t-field="company.partner_id.street"/>,<span t-field="company.partner_id.city"/>, <span t-field="company.partner_id.country_id"/></span>
                    <br/>
                    <span><span t-field="company.partner_id.phone"/>, <span t-field="company.partner_id.phone"/></span>
                </div>
            </div>
        </t>
    </template>


    <template id="hmt_container">
            <t t-set="body_classname" t-value="'container'"/>
            <t t-call="hmt.template_hmt_digital">
                <t t-raw="0"/>
            </t>
    </template>



    <report
        id="saleordendigital_report"
        string="Orden de venta - Digital"
        model="sale.order"
        report_type="qweb-pdf"
        file="hmt.saleorderdigital"
        name="hmt.saleorderdigital"
        menu="True"/>

     

    <template id="saleorderdigital">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hmt.saleorderdigital_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

     
    <template id="saleorderdigital_document">
        <t t-name="hmt.saleorderdigital_document">
        <t t-call="hmt.template_hmt_digital">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
              
              <br></br>

                <!--div class="oe_structure"/-->
                <p>
                    <span class="col-12">
                        <div style="float:right">
                            <span>Cotizacion #<span t-field="doc.name" />,</span>
                        </div>
                    </span>
                <span class="col-12">
                    <div style="float:left">
                        <span><span t-field="doc.company_id.partner_id.city" />,</span><span t-field="doc.date_order"/>
                    </div>
                </span>
                </p>
                <p></p>
                <p>
                <div class="col-12">
                    <div>
                        <span>Señores</span>
                        <br></br>
                        <t t-if="doc.partner_id.parent_id">
                            <b><span t-field="doc.partner_id.parent_id.name"/></b>
                            <br/>
                        </t>
                        <span t-field="doc.partner_id.name"/>
                        <br></br>
                        <span>Presente</span>
                    </div>
                </div>
                </p>
                <p>
                <span>Estimado </span><span t-field="doc.partner_id.name"/>
                </p>
                
                <p>
                    Reciba un cordial y atento saludo conuestros mejores deseos de éxito en sus actividades diarias. Con base en su
amable solicitud le presentamos nuestra propuesta económica.
                </p>
                
                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>
    
                <table class="table table-sm o_main_table table-bordered">
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_quantity" class="text-right">Item</th>
                            <th name="th_quantity" class="text-right">Cantidad</th>
                            <th name="th_description" class="text-left">Descripción</th>
                            <th name="th_priceunit" class="text-right">Precio Unitario</th>
                            <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                <span>Desc.%</span>
                            </th>
                            <th name="th_taxes" class="text-right">Impuetos.</th>
                            <th name="th_subtotal" class="text-right">
                                <span groups="account.group_show_line_subtotals_tax_excluded">Monto</span>
                                <span groups="account.group_show_line_subtotals_tax_included">Total </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
    
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="item" t-value="0"/>
    
                        <t t-foreach="doc.order_line" t-as="line">
                            <t t-set="item" t-value="item+1"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
    
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_item" class="text-right"><span t-esc="item"></span></td>
                                    <td name="td_quantity" class="text-right">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    <td name="td_name"><span t-field="line.name"/></td>
                                    <td name="td_priceunit" class="text-right">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                     
                                    <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td name="td_taxes" class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                    </td>
                                    <td name="td_subtotal" class="text-right o_price_total">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
    
                            <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td name="td_section_subtotal" colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
    
                <div class="clearfix" name="so_total_summary">
                    <div id="total" class="row" name="total">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm">
                                <tr class="border-black o_subtotal" style="">
                                    <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                    <td name="td_amount_untaxed" class="text-right">
                                        <span t-field="doc.amount_untaxed"/>
                                    </td>
                                </tr>
                                <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                            <td name="td_amount_by_group_label_3">
                                                <span t-esc="amount_by_group[0]"/>
                                                <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/></span>
                                            </td>
                                            <td name="td_amount_by_group_3" class="text-right o_price_total">
                                                <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td name="td_amount_by_group_label">
                                                <span t-esc="amount_by_group[0]"/>
                                            </td>
                                            <td name="td_amount_by_group" class="text-right o_price_total">
                                                <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td name="td_amount_total_label"><strong>Total</strong></td>
                                    <td name="td_amount_total" class="text-right">
                                        <span t-field="doc.amount_total"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <span t-raw="doc.terminos_generales_venta"/>

                
                
            </div>
        </t>
    </t>


    </template>





 </data>
</odoo>