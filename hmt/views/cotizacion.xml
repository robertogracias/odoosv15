<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        

    <report
        id="saleordendigital_report"
        string="Orden de venta - Digital"
        model="sale.order"
        report_type="qweb-pdf"
        file="hmt.saleorderdigital"
        name="hmt.saleorderdigital"
        menu="True"/>

    <report
        id="saleordendigital_espc_report"
        string="Orden de venta - Con Especificaciones"
        model="sale.order"
        report_type="qweb-pdf"
        file="hmt.saleorderdigital_espc"
        name="hmt.saleorderdigital_espc"
        menu="True"/>

     

    <template id="saleorderdigital">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hmt.saleorderdigital_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

     
    <template id="saleorderdigital_document">
        <t t-name="hmt.saleorderdigital_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
              <span class="col-12" style="text-align:center">
                <h2>TERMINOS DE COMPRA VENTA</h2>
                </span>
              <br/>
      
                <!--div class="oe_structure"/-->
                <p>
                    <span class="col-12">
                        <div style="float:right">
                            <span>Cotizacion #<span t-field="doc.name"/></span>
                        </div>
                    </span>
                <span class="col-12">
                    <div style="float:left">
                        <span></span><br></br><span t-field="doc.date_order" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/>
                    </div>
                </span>
                </p>
                <p/>
                <p>
                  <br></br>
                <div class="col-12">
                    <div>
                        <span>Atención a:</span>
                        <br/>
                        <t t-if="doc.partner_id.parent_id">
                            <b><span t-field="doc.partner_id.parent_id.name"/></b>
                            <br/>
                        </t>
                        <span t-field="doc.partner_id.name"/>
                        <br/>
                       
                    </div>
                </div>
                </p>
                <p>
                <!--span>Estimado </span><span t-field="doc.partner_id.name"/-->
                </p>
                   
             <div class="col-12">
                <span style="padding-left:10px;" t-raw="doc.formas_pago"/>
            </div>
            <div class="col-12">
                <span style="margin-left:10px;" t-raw="doc.garantia"/>
                </div>
                <div class="col-12">
                <span style="margin-left:10px;" t-raw="doc.notas"/>
                </div>
                <div class="col-12">
                <span style="margin-left:10px;" t-raw="doc.otros"/>
                </div>
                <div class="col-12">
                <span style="margin-left:10px;" t-raw="doc.entrega"/>
               </div>
                
            </div>
        </t>
    </t>


    </template>






    <template id="saleorderdigital_espc">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hmt.saleorderdigital_espc_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

     
    <template id="saleorderdigital_espc_document">
        <t t-name="hmt.saleorderdigital_espc_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
              
              <br></br>
                <h2>ESPECIFICACION TECNICA</h2>
                <!--div class="oe_structure"/-->
                <p>
                    <span class="col-12">
                        <div style="float:right">
                            <span>Cotizacion #<span t-field="doc.name" />,</span>
                        </div>
                    </span>
                <span class="col-12">
                    <div style="float:left">
                        <span><span t-field="doc.company_id.partner_id.city" />,</span><span t-field="doc.date_order"/>
                    </div>
                </span>
                </p>
                <p></p>
                <p>
                <div class="col-12">
                    <div>
                        <span>Señores</span>
                        <br></br>
                        <t t-if="doc.partner_id.parent_id">
                            <b><span t-field="doc.partner_id.parent_id.name"/></b>
                            <br/>
                        </t>
                        <span t-field="doc.partner_id.name"/>
                        <br></br>
                        <span>Presente</span>
                    </div>
                </div>
                </p>
                <p>
                <span>Estimado </span><span t-field="doc.partner_id.name"/>
                </p>
                
                
                
                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>
    
   

            </div>
        </t>
    </t>


    </template>



 </data>
</odoo>