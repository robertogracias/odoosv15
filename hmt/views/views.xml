<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hmtproduct_form" model="ir.ui.view">
            <field name="name">hmtproduct_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']" position="after">
                    <page string="Restricciones">
                        <field name="restriccion_ids">
                            <tree editable="bottom">
                                <field name="name" />
                                <field name="partner_id"/>
                                <field name="ruta_id"/>
                                <field name="canal_id"/>
                                

                            </tree>
                        </field>
                    </page>
                    <page string="Especificacion Tecnica">
                        <field name="especificacion" widget="html">
                           
                        </field>
                    </page>
                </xpath>
            </field>
        </record>




        <record id="requestmove_form" model="ir.ui.view">
            <field name="name">requestmove_form</field>
            <field name="model">approval.request</field>
            <field name="inherit_id" ref="approvals.approval_request_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="account_move_id" attrs="{'invisible':[('account_move_id','==',False)]}" readonly="1"/>         
                </xpath>
            </field>
        </record>

        <record id="move_po_approval_form" model="ir.ui.view">
            <field name="name">move_po_approval_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']" position="inside">
                    <group string="Requiere aprobacion por orden de compra" attrs="{'invisible':[('po_aprobacion_requierida','==',False)]}" >
                        <field name="po_aprobacion"  readonly="1"/>
                        <field name="po_aprobacion_state"  readonly="1"/>
                        <button name="solicitar_aprobacion_po" type="object" string="Solicitar Aprobacion"></button>
                        <field name="po_aprobacion_requierida"  invisible="1"/>
                    </group>
                            
                </xpath>
            </field>
        </record>
        

        <record id="hmt_company_form" model="ir.ui.view">
            <field name="name">hmt_company_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']" position="after">
                    <page string="Terminos de Venta">
                        <group>
                            <field name="terminos_generales_venta" widget="html"/>
                            <field name="formas_pago" widget="html" />
                            <field name="garantia" widget="html" />
                            <field name="notas" widget="html"  />
                            <field name="otros" widget="html"  />
                            <field name="entrega" widget="html" />
                        </group>
                    </page>
                   
                </xpath>
            </field>
        </record>


        <record id="hmt_saleorder_form" model="ir.ui.view">
            <field name="name">hmt_saleorder_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='customer_signature']" position="after">
                    <page string="Terminos de Venta">
                        <field name="terminos_generales_venta" widget="html"/>
                    </page>
                    <page string="Grupo HMT">
                        <group>
                        <label for="formas_pago" string="Formas de Pago"/>
                        <field name="formas_pago" widget="html" nolabel="1"/>
                        <label for="garantia" string="Garantía"/>
                        <field name="garantia" widget="html"  nolabel="1"/>
                        <label for="notas" string="Notas"/>
                        <field name="notas" widget="html"  nolabel="1"/>
                        <label for="otros" string="Otros Parámetros"/>
                        <field name="otros" widget="html"  nolabel="1"/>
                        <label for="entrega" string="Tiempos de entrega"/>
                        <field name="entrega" widget="html"  nolabel="1"/>
                    </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>