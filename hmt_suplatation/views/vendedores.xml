<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record model="ir.ui.view" id="hmt_vendedor_form">
            <field name="name">hmt_vendedor_form</field>
            <field name="model">hmt.vendedor</field>
            <field name="arch" type="xml">
                <form string="Vendedor">
                    <header>
                        <button name="habilitar" type="object" string="Habilitar"/>
                        <field name='state' widget='statusbar'/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" placeholder="Vendedor"/>
                            <field name="pin" />
                            <field name="warehouse_id" />
                            <field name="caja_id" />
                            <field name="user_id" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree del objetivo-->
        <record model="ir.ui.view" id="hmt_vendedor_tree">
            <field name="name">hmt_vendedor_tree</field>
            <field name="model">hmt.vendedor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="warehouse_id" />
                    <field name="caja_id" />
                </tree>
            </field>
        </record>


        <!--action del objetivo-->
        <record model="ir.actions.act_window" id="hmt_vendedor_action">
            <field name="name">Vendedores HMT</field>
            <field name="res_model">hmt.vendedor</field>
            <!--field name="view_type">form</field-->
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Rutas</p>
            </field>
        </record>

        <!--menu del objetivo-->
        <menuitem id="hmt_vendedor" parent="account.account_management_menu" name="Vendedores HMT" action="hmt_vendedor_action" sequence="19"/>


    </data>
</odoo>